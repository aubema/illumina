if [ ! -d bin ]
then mkdir bin
fi

firstLine=`head -1 illum/__init__.py`
version=${firstLine:15:-1}

F77="gfortran"
folder=`pwd`
chmod a+x bin/*

# options de debuggage -Wall -fcheck=all -g -fbacktrace -ffpe-trap=zero
echo $F77"-Wunused-parameter -mcmodel=medium -ffpe-trap=zero,overflow,underflow,denormal -fno-backtrace -O3 kernel/illumina_new.f90 kernel/thirdscat.f90 kernel/secondscat.f90 kernel/firstscat.f90 kernel/zone_diffusion.f kernel/diffusion.f kernel/angle3points.f kernel/anglesolide.f kernel/transmita.f kernel/transmitm.f kernel/anglezenithal.f kernel/angleazimutal.f kernel/horizon.f kernel/cloudreflectance.f kernel/blocking.f kernel/twodin.f kernel/twodout.f kernel/transTOA.f kernel/curvature.f kernel/molabs.f  -o bin/illumina"
sed -i "s/__version__/$version/" kernel/illumina.f
$F77 -Wunused-parameter -mcmodel=medium -ffpe-trap=zero,overflow,underflow,denormal -fno-backtrace -O3 kernel/illumina_new.f90 kernel/thirdscat.f90 kernel/secondscat.f90 kernel/firstscat.f90 kernel/zone_diffusion.f kernel/diffusion.f kernel/angle3points.f kernel/anglesolide.f kernel/transmita.f kernel/transmitm.f kernel/anglezenithal.f kernel/angleazimutal.f kernel/horizon.f kernel/cloudreflectance.f kernel/blocking.f kernel/twodin.f kernel/twodout.f kernel/transTOA.f kernel/curvature.f kernel/molabs.f  -o bin/illumina
sed -i "s/$version/__version__/" kernel/illumina.f
echo $F77" kernel/continue_illumina.f -o bin/continue_illumina"
$F77 kernel/continue_illumina.f -o bin/continue_illumina
chmod a+x bin/*
chmod a+x *.bash
